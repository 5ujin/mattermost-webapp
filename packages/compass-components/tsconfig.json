{
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,

        "jsx": "react",
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",

        "strict": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,

        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./src"
    },
    "include": ["src/**/*"]
}
